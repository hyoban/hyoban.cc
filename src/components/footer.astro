---
import { getPages } from '@/utils'

const pages = await getPages()

const links = [
  { name: 'X', url: 'https://x.com/hyoban_cc', icon: 'i-simple-icons-x' },
  { name: 'Bluesky', url: 'https://bsky.app/profile/hyoban.cc', icon: 'i-simple-icons-bluesky' },
  { name: 'Telegram', url: 'https://t.me/hyoban', icon: 'i-simple-icons-telegram' },
  { name: 'GitHub', url: 'https://github.com/hyoban', icon: 'i-simple-icons-github' },
  { name: 'RSS', url: '/rss.xml', icon: 'i-simple-icons-rss' },
  { name: 'LLMs', url: '/llms.txt', icon: 'i-lucide-bot size-5' },
]
---

<footer class="mt-6 text-center space-y-2">
  <div class="flex flex-wrap justify-center items-center gap-x-4 gap-y-2 tracking-tight text-tx-2">
    {
      links.map((link) => (
        <a
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          class={`hover:text-cy transition-colors duration-200 ${link.icon}`}
          title={link.name}
        >
          {link.name}
        </a>
      ))
    }
    {
      pages.length > 0 && (
        <>
          <span class="text-tx-3">|</span>
          {pages.map((page) => (
            <a href={`/${page.data.link}`} class="underline hover:text-cy">
              {page.data.title}
            </a>
          ))}
        </>
      )
    }
  </div>
</footer>
