---
const links = [
  { name: 'xLog', url: 'https://hyoban.xlog.app', icon: '' },
  { name: 'X', url: 'https://x.com/0xhyoban', icon: 'i-simple-icons-x' },
  { name: 'GitHub', url: 'https://github.com/hyoban', icon: 'i-simple-icons-github' },
  { name: 'RSS', url: '/rss.xml', icon: 'i-simple-icons-rss' },
]
---

<footer class="mt-12 text-center">
  <div class="flex justify-center items-center space-x-4 tracking-tight">
    {
      links.map((link) => (
        <a
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          class={`text-tx-2 hover:text-cy transition-colors duration-200 ${link.icon}`}
          title={link.name}
        >
          {link.name}
        </a>
      ))
    }
  </div>
</footer>
