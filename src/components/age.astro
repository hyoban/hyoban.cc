---
const birthDate = new Date('1999-09-25')
---

<span id="age" class="font-mono"></span>

<script define:vars={{ birthDate: birthDate.toISOString() }}>
  function calculateAge() {
    const birth = new Date(birthDate)
    const now = new Date()

    const diff = now.getTime() - birth.getTime()
    const ageYears = diff / (1000 * 60 * 60 * 24 * 365.25)

    return ageYears.toFixed(9)
  }

  function updateAge() {
    const ageElement = document.getElementById('age')
    if (ageElement) {
      ageElement.textContent = calculateAge()
    }
  }

  // Update immediately
  updateAge()

  // Update every 100ms for real-time effect
  setInterval(updateAge, 100)
</script>
